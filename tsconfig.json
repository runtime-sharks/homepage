{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		// "checkJs": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"target": "es2020",
		"typeRoots": ["./node_modules/@types"]
	},
	"exclude": [
		"node_modules",
		"build",
		"*.config.js",
		"./**/base.js",
		"./**/paddle.js"
	]
}
